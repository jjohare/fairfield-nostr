# Fairfield Nostr Environment Configuration
# Copy to .env and fill in values

# ===========================================
# Relay Configuration
# ===========================================

# WebSocket relay URL (used by PWA)
RELAY_URL=wss://relay.fairfield.example

# Relay name (shown in NIP-11)
RELAY_NAME="Fairfield Private Relay"

# Relay description
RELAY_DESCRIPTION="Private relay for Fairfield community"

# Admin contact email
RELAY_CONTACT=admin@fairfield.example

# ===========================================
# Admin Configuration
# ===========================================

# Admin public key (hex format, 64 characters)
# Generate with: npx nostr-tools generate
ADMIN_PUBKEY=

# Admin display name
ADMIN_DISPLAY_NAME="Fairfield Admin"

# ===========================================
# PWA Configuration
# ===========================================

# Application name
PUBLIC_APP_NAME="Fairfield Chat"

# Application URL
PUBLIC_APP_URL=https://chat.fairfield.example

# ===========================================
# Domain Configuration
# ===========================================

# Main application domain
DOMAIN=fairfield.example

# Chat subdomain
CHAT_DOMAIN=chat.fairfield.example

# Relay subdomain
RELAY_DOMAIN=relay.fairfield.example

# ===========================================
# Backup Configuration
# ===========================================

# S3-compatible storage bucket
# Format: s3:bucket-name/path
BACKUP_S3_BUCKET=s3:fairfield-backups/relay

# AWS credentials (or S3-compatible)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Restic encryption password
BACKUP_PASSWORD=

# ===========================================
# Security Configuration
# ===========================================

# Enable debug mode (set to false in production)
DEBUG=false

# Enable NIP-42 authentication requirement
REQUIRE_AUTH=true

# ===========================================
# Optional: Monitoring
# ===========================================

# Prometheus metrics port (optional)
# METRICS_PORT=9090

# Grafana admin password (optional)
# GRAFANA_PASSWORD=
